@model string

<style>
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.6;
    }

    .form-container {
        max-width: 400px;
        margin: auto;
        padding: 20px;
        border-radius: 10px;
        background-color: #f9f9f9;
        box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
    }

        .form-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

    .form-group label {
        font-weight: bold;
    }
</style>

<img src="~/IMG/IMG3.png" class="background-image" alt="Background Image">

<div class="container">
    <div class="form-container">
        <h2>CRIAR NÍVEL DE ACESSO</h2>

        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="name">Nome:</label>
                <input name="name" class="form-control" />
            </div>
            <br />
            <div class="text-center">
                <button type="submit" class="btn btn-dark">CRIAR</button>
                <a asp-action="Index" class="btn btn-secondary">VOLTAR</a>
            </div>
        </form>
    </div>
</div>
