@model IEnumerable<IdentityUser>

<style>
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.6;
    }

    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
    }

    .user-card {
        margin-bottom: 20px;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .user-card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        padding: 10px;
        font-weight: bold;
    }

    .user-card-body {
        padding: 10px;
    }

    .user-card-footer {
        background-color: #f8f9fa;
        border-top: 1px solid #dee2e6;
        border-bottom-left-radius: 8px;
        border-bottom-right-radius: 8px;
        padding: 10px;
        text-align: right;
    }

    .btn-cadastrar {
        width: auto;
    }
</style>

<img src="~/IMG/IMG3.png" class="background-image" alt="Background Image">

<div class="container">
    <div class="text-center mb-4">
        <h2>LISTA DE USUÁRIOS</h2>
    </div>

    @if (Model.Any())
    {
        <div class="text-center mb-3">
            <a asp-action="Create" asp-controller="Funcionarios" asp-area="" class="btn btn-dark btn-cadastrar">
                CADASTRAR
            </a>
        </div>

        @foreach (var user in Model)
        {
            <div class="card user-card">
                <div class="card-header user-card-header">
                    User Id: @user.Id
                </div>
                <div class="card-body user-card-body">
                    <h5 class="card-title">
                        <i class="fa fa-user"></i> @user.UserName
                    </h5>
                </div>
                <div class="card-footer user-card-footer">
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Deletar
                        </button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card user-card">
            <div class="card-header user-card-header">
                Não existem usuários
            </div>
            <div class="card-body user-card-body">
                <h5 class="card-title">
                    Clique no botão para criar um usuário
                </h5>
            </div>
            <div class="card-footer user-card-footer">
                <div class="text-center">
                    <a class="btn btn-dark btn-cadastrar" asp-controller="Account" asp-area="" asp-action="Register">
                        CADASTRAR
                    </a>
                </div>
            </div>
        </div>
    }
</div>
