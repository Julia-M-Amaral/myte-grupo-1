@model IEnumerable<IdentityUser>

<style>
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.6;
    }

    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
    }

    .btn-cadastrar {
        width: auto;
    }

    .table-white-background {
        background-color: white;
    }

    .title-style {
        color: black;
        font-size: 40px;
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8);
    }
</style>

<img src="~/IMG/IMG3.png" class="background-image" alt="Background Image">

<div style="text-align: center;">
    <h1 class="title-style">Lista de Usuários</h1>
    <br />
</div>

@if (Model.Any())
{
    <div class="container">
        <table class="table table-white-background">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>E-mail</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Deletar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container">
        <div class="card user-card">
            <div class="card-header user-card-header">
                Não existem usuários
            </div>
            <div class="card-body user-card-body">
                <h5 class="card-title">
                    Clique no botão para criar um usuário
                </h5>
            </div>
            <div class="card-footer user-card-footer">
                <div class="text-center">
                    <a class="btn btn-dark btn-cadastrar" asp-controller="Account" asp-area="" asp-action="Register">
                        CADASTRAR
                    </a>
                </div>
            </div>
        </div>
    </div>
}
