@page
@model LoginModel

@{
    ViewData["Title"] = "";
}

<style>
    .rounded-t-5 {
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
    }

    (min-width: 992px) {
        .rounded-tr-lg-0

    {
        border-top-right-radius: 0;
    }

    .rounded-bl-lg-5 {
        border-bottom-left-radius: 0.5rem;
    }

    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.7;
        border-radius: 0.5rem;
    }

    .card {
        border-radius: 0.5rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }


    .btn-orange {
        background-image: linear-gradient(to right, #FFA500, #FF4500);
        color: white;
    }


    .form-control {
        border-radius: 0.5rem;
    }

    .form-label {
        color: #333;
        font-weight: bold;
    }

    .form-floating {
        margin-bottom: 1.5rem;
    }
</style>
<section class="d-flex justify-content-center align-items-center min-vh-95">
    <img src="~/IMG/IMG2.png" class="background-image" alt="Background Image">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="row g-0 d-flex align-items-center">
                <div class="col-lg-4 d-none d-lg-flex">
                    <img src="~/IMG/IMG5.png" class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
                </div>
                <div class="col-lg-8">
                    <div class="card-body py-5 px-md-5">
                        <h1 class="mb-4">@ViewData["Title"]</h1>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">E-mail</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox mt-3">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div class="mt-4">
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-orange">Log in</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
