@model IEnumerable<Myte.Models.WBS>

@{
    ViewData["Title"] = "Listagem WBS";
}

@if (TempData["message"] != null)
{
    <script src="/lib/jquery//dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["message"]');
    </script>
}

<style>
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.6;
    }

    .text-center-btn {
        display: flex;
        justify-content: center;
        margin-top: 10px;
    }

    .title-style {
        color: black;
        font-size: 45px;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.8);
    }

    .col-form-label {
        font-weight: bold;
    }


    .white-background {
        background-color: white;
    }
</style>

<img src="~/IMG/IMG3.png" class="background-image" alt="Background Image">

<div style="text-align: center;">
    <h1 class="title-style">WBS</h1>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <br />
    <p>
        <a asp-action="Create" class="btn btn-dark">CADASTRAR</a>
    </p>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">

    <div class="col-md-6">
        <form asp-action="Index" method="get">
            <div class="input-group text-center mb-3">
                <input type="text" class="form-control" name="searchString" placeholder="Buscar código ou descrição...">
                <div class="input-group-append">
                    <button class="btn btn-secondary" type="submit">Buscar</button>
                    <a asp-action="Index" class="btn btn-secondary">Lista Completa</a>
                </div>
            </div>
        </form>
    </div>
</div>

    <div class="container mt-5">
     
            <div class="white-background row justify-content-center">
            <div class="col-lg-6">
                <div class="card">

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipos)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipos)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-dark" asp-route-id="@item.WBSId"><i class="bi bi-pencil-fill"></i></a>
                        <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.WBSId"><i class="bi bi-card-checklist"></i></a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.WBSId"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
