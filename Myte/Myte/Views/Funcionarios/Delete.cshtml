@model Myte.Models.Funcionario

@{
    ViewData["Title"] = "Apagar Funcionário";
}

@if (TempData["message"] != null)
{
    <script src="/lib/jquery//dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["message"]');
    </script>
}

<style>
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.6;
    }

    .text-center-btn {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .title-style {
        color: black;
        font-size: 45px;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.8);
    }

    .col-form-label {
        font-weight: bold;
    }

    .white-background {
        background-color: white;
    }
</style>

<img src="~/IMG/IMG3.png" class="background-image" alt="Background Image">
<div style="text-align: center;">
    <h1 class="title-style">Deletar Funcionário</h1>

    <div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.FuncionarioNome)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FuncionarioNome)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.DataContratacao)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DataContratacao)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Departamento)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Departamento.DepartamentoNome)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.NivelAcesso)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.NivelAcesso)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                    </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="FuncionarioId" />
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger">Deletar</button> |
                        <a asp-action="Index" class="btn btn-secondary ml-3">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>
