@model Myte.Models.Funcionario

@{
    ViewData["Title"] = "Edit";
}

<style>
    /* CSS para ajustar o posicionamento da imagem */
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1; /* Garante que a imagem fique atrás do conteúdo */
        width: 100%;
        height: 100%;
        object-fit: cover; /* Para preencher o contêiner */
        opacity: 0.7; /* Opacidade da imagem */
    }

    /* CSS para o fundo branco */
    .white-background {
        background-color: white;
        padding: 20px; /* Adicione um preenchimento opcional para afastar o conteúdo das bordas */
        width: fit-content; /* Ajuste a largura para que corresponda ao conteúdo */
        margin: auto; /* Centralize a tabela na página */
    }

    /* CSS para o texto das etiquetas */
    .col-form-label {
        font-weight: bold; /* Deixa o texto em negrito */
    }
</style>


<img src="~/IMG/IMG3.png" class="background-image" alt="Background Image">


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-white text-black">
                    <h2 class="card-title text-center mb-0">EDITAR FUNCIONÁRIO</h2>
                </div>
                <br />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="FuncionarioId" />
                    <br />
                    <div class="form-group row">
                        <label for="FuncionarioNome" class="col-sm-3 col-form-label">Nome do Funcionário:</label>
                        <div class="col-sm-8">
                            <input asp-for="FuncionarioNome" class="form-control" />
                            <span asp-validation-for="FuncionarioNome" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="Email" class="col-sm-3 col-form-label">Email:</label>
                        <div class="col-sm-8">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="DepartamentoId" class="col-sm-3 col-form-label">Departamento:</label>
                        <div class="col-sm-8">
                            <select asp-for="DepartamentoId" class="form-control" asp-items="ViewBag.DepartamentoId"></select>
                            <span asp-validation-for="DepartamentoId" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="DataContratacao" class="col-sm-4 col-form-label">Data de Contratação:</label>
                        <div class="col-sm-4">
                            <input asp-for="DataContratacao" class="form-control" />
                            <span asp-validation-for="DataContratacao" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="NivelAcesso" class="col-sm-4 col-form-label">Nível de Acesso:</label>
                        <div class="col-sm-4">
                            <input asp-for="NivelAcesso" class="form-control" />
                            <span asp-validation-for="NivelAcesso" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="Status" class="col-sm-4 col-form-label">Status:</label>
                        <div class="col-sm-4">
                            <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="Senha" class="col-sm-4 col-form-label">Senha:</label>
                        <div class="col-sm-4">
                            <input asp-for="Senha" class="form-control" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group text-center">
                        <input type="submit" value="Salvar" class="btn btn-dark" /> |
                        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
