@model IEnumerable<Myte.Models.Departamento>
@{
    ViewData["Title"] = "LISTA DEPARTAMENTO";
}

<script src="/lib/jquery//dist/jquery.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

@if (TempData["message"] != null)
{
    <script src="/lib/jquery//dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["message"]');
    </script>

}

@if (TempData["message"] != null)
{
    <script src="/lib/jquery//dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error('@TempData["message error"]');
    </script>

}




<style>
    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.6;
    }

    .text-center-btn {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .white-background {
        background-color: white;
    }
</style>

<img src="~/IMG/IMG3.png" class="background-image" alt="Background Image">

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<div style="text-align: center;">
    <h2>LISTA DEPARTAMENTOS</h2>
    <br />
    <p>
        <a asp-action="Create" class="btn btn-dark">CADASTRAR</a>
    </p>
</div>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
   
                <div class="card-body">
                    <div class="d-flex justify-content-center mb-4">
                 
                    </div>           
                    <div class="row">
                        <div class="col-md-6">
                            <form asp-action="Index" method="get">
                                <div class="input-group mb-4">
                                    <input type="text" class="form-control" name="searchString" placeholder="Buscar departamento">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6 text-right">
                            <a asp-action="Index" class="btn btn-secondary ml-2">Lista Completa</a>
                        </div>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.DepartamentoNome)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DepartamentoNome)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" class="btn btn-dark" asp-route-id="@item.DepartamentoId"><i class="bi bi-pencil-fill"></i></a>
                                        <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.DepartamentoId"><i class="bi bi-card-checklist"></i></a>
                                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DepartamentoId"><i class="bi bi-trash3-fill"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
