@model IEnumerable<Myte.Models.Departamento>

@{
    ViewData["Title"] = "LISTA DEPARTAMENTOS";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .card-header {
        /* Gradiente laranja removido */
    }

    .btn-cadastrar {
       
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title text-center mb-0">
                        @ViewData["Title"]
                    </h2>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center mb-4">
                    <a asp-action="Create" class="btn btn-dark">CADASTRAR</a>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-6">
                            <form asp-action="Index" method="get">
                                <div class="input-group mb-4">
                                    <input type="text" class="form-control" name="searchString" placeholder="Buscar departamento">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6 text-right">
                            <a asp-action="Index" class="btn btn-secondary ml-2">Lista Completa</a>
                        </div>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.DepartamentoNome)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DepartamentoNome)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" class="btn btn-dark" asp-route-id="@item.DepartamentoId"><i class="bi bi-pencil-fill"></i></a>
                                        <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.DepartamentoId"><i class="bi bi-card-checklist"></i></a>
                                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DepartamentoId"><i class="bi bi-trash3-fill"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
