@model Myte.Models.Departamento

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Deletar Departamento</h2>

                    <div class="text-center mb-4">
                        <h4 class="card-subtitle">Tem certeza que deseja deletar?</h4>
                    </div>

                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3">Departamento:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DepartamentoNome)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="DepartamentoId" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger">Deletar</button> |
                            <a asp-action="Index" class="btn btn-secondary ml-3">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
